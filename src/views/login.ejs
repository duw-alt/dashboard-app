<!DOCTYPE html>
<html lang="<%= lang %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= t.loginTitle %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <script>
    window.errorTranslations = <%- JSON.stringify({ en: translations.en, ka: translations.ka }).replace(/</g, '\u003c') %>;
    window.currentLang = "<%= lang %>";
    </script>
    <%- include('partials/lang-switcher', { lang: lang }) %>
    <div class="container">
        <div class="login-container">
            <h1><%= t.loginTitle %></h1>
            <form id="loginForm">
                <div class="form-group">
                    <label for="citizenId"><%= t.citizenId %></label>
                    <input type="text" id="citizenId" name="citizenId" required>
                </div>
                <div class="form-group">
                    <label for="password"><%= t.password %></label>
                    <input type="password" id="password" name="password" required>
                </div>
                <div id="loginError" style="color:red; margin-bottom:15px;"></div>
                <button type="submit"> <%= t.loginBtn %> </button>
            </form>
            <div style="text-align:center; margin-top:20px;">
                <a href="/register?lang=<%= lang %>"><%= t.noAccount %></a>
            </div>
        </div>
    </div>
    <script src="/js/script.js"></script>
</body>
</html> 